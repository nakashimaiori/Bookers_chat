<div class="box">

<h2 class="rooms-title">Chat Room</h2>


<div class="user-name">

<% @entries.each do |e| %>
  <strong>
    <a class="rooms-user-link" href="/users/<%= e.user.id %>">
      <%= e.user.name %>さん<br>
    </a>
  </strong>
<% end %>

  </div>

<br>

<div class="chats">

  <div id="allchat" class="chat">
    <%= render 'chats/show', messages: @messages %>
  </div>

  <div class="posts">
  	<%= form_with(model:@message, remote: true) do |f| %>
    <%= f.text_field :message, placeholder: "メッセージを入力" , size: 70, class:"form-text-field" %>
    <%= f.hidden_field :room_id, value: @room.id %>

    <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>
</div>
