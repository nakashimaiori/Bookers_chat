<div class="box">
<div class="container">
<div class="row">

<div class="col-xs-3">
		<div class="info">
			<%= render 'layouts/notifications' %>
  		<h2>User info</h2>

          <%= render 'info', user: @user %>


          <% unless @user.id == current_user.id %>
			<% if @isRoom == true %>
			<p class="user-show-room"><a href="/chats/<%= @roomId %>" class="btn btn-primary btn-xs">チャットへ</a>
				<% else %>
				<%= form_for @room do |f| %>
				<%= fields_for @entry do |e| %>
				<%= e.hidden_field :user_id, value: @user.id %>
				<% end %>
				<%= f.submit "チャットを始める", class:"btn btn-primary btn-xs user-show-chat"%>
				<% end %>
				<% end %>
				<% end %>
    	</div>


<div class="newbook">
	<h2>New book</h2>
		<%= render 'books/new_book', book: @book %>
</div>
</div>


<div class="col-xs-9">
	<h1>Books</h1>
	<table class='table table-hover table-inverse'>
		<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
		</thead>


		<% @books.each do |book| %>
		<%= link_to user_path(@user.id) do %>
		<tbody>
		<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
		<% end %>
		<td><%=link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
		</td>
		</tr>
		</tbody>
		<% end %>
		</table>
</div>
</div>
</div>
</div>

